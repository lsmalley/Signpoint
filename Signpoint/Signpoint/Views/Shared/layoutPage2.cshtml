<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Signpoint</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <div class="gridcontainer">
            <!--Banner goes here-->
            <div class="banner">
                <img src="~/Content/1440x300.jpg" class="img-responsive" alt="Signpoint Banner"/>
            </div>

            <div class="vertical-menu">
                @if (ViewBag.Title == "About")
                {
                    @Html.ActionLink("Home", "Index", "Home");
                    @Html.ActionLink("About", "About", "Home", new { @class = "active" });
                    @Html.ActionLink("Portfolio", "Portfolio", "Home");
                    @Html.ActionLink("Contact", "Contact", "Home");
                }
            
                @if (ViewBag.Title == "Contact")
                {
                    @Html.ActionLink("Home", "Index", "Home");
                    @Html.ActionLink("About", "About", "Home");
                    @Html.ActionLink("Portfolio", "Portfolio", "Home");
                    @Html.ActionLink("Contact", "Contact", "Home", new { @class = "active" });
                }
            </div>
            <div class="textfield">
                @RenderBody()
            </div>
        </div>
        <footer>
            <img src="~/Content/sptwatermark.jpg" class="pull-right"/>
            <p>&copy; @DateTime.Now.Year - Signpoint</p>
            <p>Contact Hours: 9:00am - 5:00pm</p>
        </footer>
    </div>
</body>
</html>
